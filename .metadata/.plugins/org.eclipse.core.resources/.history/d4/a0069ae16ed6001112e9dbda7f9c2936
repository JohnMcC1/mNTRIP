package com.mntripclient;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

import android.os.Environment;

public final class FileLog {
	private final static FileLog instance = new FileLog();
	private static FileOutputStream fileOutpurStream;
	private static SimpleDateFormat sdf = new SimpleDateFormat("yyyyMMdd_HHmmss");
	private static String currentDateandTime = sdf.format(new Date());
	
    public static FileLog getInstance() {
        return instance;
    }
	
    synchronized void log(String s) {
		try {
			fileOutpurStream.write(s.getBytes());
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	private FileLog() {
		try {
			fileOutpurStream = new FileOutputStream(Environment.getExternalStorageDirectory().getAbsolutePath() + "/nMTRIPClientLog.txt");
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
}
